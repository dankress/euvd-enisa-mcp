{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "types": [
      "vitest/globals"
    ]
  },
  "include": ["src/**/*", "vitest.config.ts"],
  "exclude": ["**/*.test.ts", "**/__tests__/**"]
}